<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                                    xmlns:app="http://schemas.android.com/apk/res-auto"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginEnd="16dp"
                                    android:layout_marginStart="16dp"
                                    android:background="@color/colorPrimaryLight"
                                    android:elevation="0dp"
                                    app:cardElevation="0dp">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" android:background="@color/colorPrimary">

        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/party_picture"
            android:layout_width="match_parent" android:layout_height="150dp"
            app:actualImageScaleType="centerCrop"
            app:placeholderImageScaleType="centerCrop"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:placeholderImage="@drawable/rick"/>
        <TextView
            android:id="@+id/party_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:layout_marginStart="8dp"
            android:layout_marginTop="8dp" android:text="TextView"
            android:textColor="@color/flashyYellow"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/party_picture"/>
        <TextView
            android:id="@+id/party_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content" android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp" android:layout_marginTop="8dp"
            android:text="TextView"
            android:textColor="@color/flashyGreen"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/party_date"/>
        <TextView
            android:id="@+id/party_country"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp" android:text="TextView"
            android:textColor="@color/flashyGreen"
            app:layout_constraintStart_toEndOf="@+id/party_location_icon"
            app:layout_constraintTop_toBottomOf="@+id/party_name"/>

        <ImageView
            android:id="@+id/party_location_icon"
            android:layout_width="wrap_content" android:layout_height="20dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp" android:adjustViewBounds="true"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/party_name" app:srcCompat="@drawable/ic_place_black_24dp"/>
    </android.support.constraint.ConstraintLayout>
</android.support.v7.widget.CardView>