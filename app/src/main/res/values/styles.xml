<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="android:statusBarColor" tools:targetApi="lollipop">@color/purpleLight</item>
        <item name="colorControlNormal">@color/moutarde</item>
        <item name="regularTextColor">@color/moutarde</item>
        <item name="greyTextColor">@color/gray</item>
        <item name="subtitleRegularTextColor">@color/flashyYellow</item>
    </style>

    <style name="AppTheme.Toolbar.Title" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <!-- Set proper title size -->
        <item name="android:textSize">@dimen/abc_text_size_title_material_toolbar</item>
        <!-- Set title color -->
        <item name="android:textColor">?attr/regularTextColor</item>
    </style>


    <style name="GreenTitleTv" parent="TextAppearance.AppCompat">
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">?attr/greyTextColor</item>
        <item name="android:paddingLeft">8dp</item>
        <item name="android:paddingTop">32dp</item>
        <item name="android:paddingBottom">4dp</item>
        <item name="android:background">@color/spaceBlue</item>
    </style>

    <style name="WhiteContentTv" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@android:color/white</item>
    </style>


    <style name="NavigationDrawerStyle">
        <item name="android:textSize">18sp</item><!-- text size in menu-->
        <item name="android:textColor">#FFFFFF</item><!-- text size in menu-->
        <item name="android:fontFamily">Roboto</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_marginBottom">8dp</item>
    </style>

</resources>
